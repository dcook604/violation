# Flask secret key (change in production)
SECRET_KEY=your_secret_key

# Database connection string (update for Render's managed DB or use SQLite for testing)
DATABASE_URL=sqlite:///violation.db

# Flask-Mail settings
MAIL_SERVER=smtp.example.com
MAIL_PORT=587
MAIL_USE_TLS=1
MAIL_USERNAME=your_email@example.com
MAIL_PASSWORD=your_email_password
MAIL_DEFAULT_SENDER=noreply@strata.local

# File upload folder (optional, Render uses ephemeral filesystem)
UPLOAD_FOLDER=/tmp/uploads
